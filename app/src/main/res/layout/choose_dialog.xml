<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="@dimen/dialog_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:padding="@dimen/fab_margin">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:text="@string/select_action"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/delete_btn"
        android:layout_width="@dimen/text_btn_width"
        android:layout_height="@dimen/text_btn_height"
        android:layout_alignLeft="@+id/title"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/title"
        app:fontFamily="sans-serif-smallcaps"
        android:gravity="center_vertical"
        android:text="@string/delete"
        android:textColor="@color/dialog_text_btn"
        android:textSize="@dimen/text_btn_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/edit_btn"
        android:layout_width="@dimen/text_btn_width"
        android:layout_height="@dimen/text_btn_height"
        android:layout_alignEnd="@+id/title"
        android:layout_alignRight="@+id/title"
        android:layout_alignTop="@+id/delete_btn"
        app:fontFamily="sans-serif-smallcaps"
        android:gravity="center_vertical"
        android:text="@string/edit"
        android:textColor="@color/dialog_text_btn"
        android:textSize="@dimen/text_btn_size"
        android:textStyle="bold" />


</RelativeLayout>